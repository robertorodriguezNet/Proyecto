<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.ayuda.AyudaActivity"
            android:exported="false"
            android:label="Ayuda"/>
        <activity
            android:name=".activities.ContactoActivity"
            android:exported="false"
            android:label="Lista de la compra - Contacto"/>
        <activity
            android:name=".activities.AcercaDeActivity"
            android:exported="false"
            android:label="Lista de la compra - Acerca de..."/>
        <activity
            android:name=".activities.marcablanca.MarcaBlancaActivity"
            android:exported="false"
            android:label="@string/title_activity_marcaBlanca">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.compras.ComprasActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.almacen.AlmacenActivity"
            android:exported="false"
            android:label="@string/title_activity_almacen"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.lista.ListaActivity"
            android:exported="false"
            android:label="@string/title_activity_lista">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.almacen.clases.CaptureActivityPortrait"
            android:screenOrientation="fullSensor"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>