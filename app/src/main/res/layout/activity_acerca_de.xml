<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.AcercaDeActivity">

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portada" />

    <TextView
        android:id="@+id/about_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Lista de la compra"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/about_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_version"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/about_logo"
        app:layout_constraintTop_toBottomOf="@+id/about_titulo" />

    <ImageView
        android:id="@+id/about_img_autor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/about_autor"
        app:layout_constraintBottom_toBottomOf="@id/about_autor"
        app:layout_constraintEnd_toStartOf="@id/about_autor"/>

    <TextView
        android:id="@+id/about_autor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Roberto Rodríguez Jiménez"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/about_img_autor"
        app:layout_constraintTop_toBottomOf="@+id/about_logo" />

    <ImageView
        android:id="@+id/about_img_mail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@id/about_mail"
        app:layout_constraintEnd_toStartOf="@id/about_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/about_mail"
        app:srcCompat="@drawable/mail2" />

    <TextView
        android:id="@+id/about_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="roberto.rodjim.1@educa.jcyl.es"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/about_img_mail"
        app:layout_constraintTop_toBottomOf="@+id/about_autor" />

    <ImageView
        android:id="@+id/about_img_github"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@id/about_github"
        app:layout_constraintEnd_toStartOf="@id/about_github"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/about_github"
        app:srcCompat="@drawable/github" />

    <TextView
        android:id="@+id/about_github"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="GitHub"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/about_img_github"
        app:layout_constraintTop_toBottomOf="@+id/about_mail" />

    <ImageView
        android:id="@+id/about_img_documentacion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@id/about_documentacion"
        app:layout_constraintEnd_toStartOf="@id/about_documentacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/about_documentacion"
        app:srcCompat="@drawable/portada" />

    <TextView
        android:id="@+id/about_documentacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Documentación"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/about_img_github"
        app:layout_constraintTop_toBottomOf="@+id/about_github" />

    <TextView
        android:id="@+id/about_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Aplicación realizada como Proyecto del CFGS de Desarrollo de aplicaciones Multiplataforma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_documentacion" />

    <TextView
        android:id="@+id/about_referencias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:text="Iconos realizados por:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_texto" />

    <TextView
        android:id="@+id/about_referencias2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Freepik de www.flaticon.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_referencias" />

    <TextView
        android:id="@+id/about_referencias3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="pictranoosa de www.flaticon.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_referencias2" />

    <TextView
        android:id="@+id/about_referencias4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alfredo Creates de www.flaticon.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_referencias3" />

    <TextView
        android:id="@+id/about_referencia_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Logo de la app proporcionado por: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_referencias4" />

    <TextView
        android:id="@+id/about_referencia_logo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="www.canstockphoto.es/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_referencia_logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/about_salir"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/green_500"
        android:gravity="center"
        android:text="@string/mep_str_it_cancelar"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_exit_to_app_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/about_guia_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/about_guia_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>