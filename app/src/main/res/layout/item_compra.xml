<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/cli_lly_datosCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cli_tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Nombre" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cli_tv_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha" />

            <TextView
                android:id="@+id/cli_tv_comercio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Comercio"
                android:textAlignment="textStart"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/cli_img_delete"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        app:srcCompat="@drawable/ic_baseline_delete_forever_16"
        android:textAlignment="textEnd"/>

</LinearLayout>